<%- include header %>
<%- include right %>
<div class="m-left">
	<%- include alert %>
	<ul class="archive">
		<% var lastMonth = 0 %>
		<% posts.forEach(function (post, index) { %>
		<% if (lastMonth != post.time.month) { %>
		<li><h3><%= post.time.month %></h3></li>
		<% lastMonth=post.time.month } %>
		<li><time class=""><%= post.time.day %></time></li>
		<li><a href="/post/<% post.name %>/<%= post._id %>"><%= post.title %></a></li>
		<% }) %>
	</ul>
	<%- include footer %>