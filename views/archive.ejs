<%- include header %>
<div class="m-left">
	<% if (title) { %>
	<div class="page-header">
		<h3><%= title %></h3>
	</div>
	<% } %>
	<article>
		<% if (success) { %>
		<div class="alert alert-success" role="alert"><%= success %></div>
		<% } %>
		<% if (error) { %>
		<div class="alert alert-danger" role="alert"><%= error %> </div>
		<% } %>
	</article>
	<ul class="archive">
		<% var lastMonth = 0 %>
		<% posts.forEach(function (post, index) { %>
		<% if (lastMonth != post.time.month) { %>
		<li><h3><%= post.time.month %></h3></li>
		<% lastMonth=post.time.month } %>
		<li><time class=""><%= post.time.day %></time></li>
		<li><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></li>
		<% }) %>
	</ul>
	<%- include footer %>