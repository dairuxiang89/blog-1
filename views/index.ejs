<%- include header %>
<%- include right %>
<div>
    <%- include alert %>
    <div>
        <ul>
        <% posts.forEach(function (post, index) { %>
        <li class="content">
            <div class="content-box posts-gallery-box">
            <% if (post.firstPic) { %>
                <div class="posts-gallery-img">
                    <a href="" title="">   
                        <img class="lazy" src="<%= post.firstPic %>" alt="" style="display: inline-block;">
                    </a>
                </div>
                <div class="posts-gallery-content">
                    <h2><a href="/post/<%= post.name %>/<%= post._id %>"><%= post.title %></a></h2>
            <% } else {%>
                <div class="posts-gallery-content">
                    <h2 class="border-bom"><a href="/post/<%= post.name %>/<%= post._id %>"><%= post.title %></a></h2>
            <% } %>
                    <div class="posts-gallery-text">
                        <%- post.post %>
                    </div>
                    <div class="posts-default-info">
                        <ul>
                            <li class="post-author">
                                <div class="avatar">
                                    <img src="<%= post.head %>" class="photo" height="50" width="50" style="display: block;">
                                </div>
                                <a href="u/<%= post.name %>" target="_blank"><%= post.name %></a>
                            </li>
                            <li class="ico-time">
                                <i class="icon-clock"></i>
                                <%= post.time.minute %>
                            </li>
                            <li class="ico-type">
                                <i class="icon-list"></i>
                                <a href="/p/<%= post.type %>"><%= post.type %></a>
                            </li>
                            <li class="ico-eye">
                                <i class="icon-eye"></i>
                                <%= post.pv %>
                            </li>
                            <% if (post.comments.length === 0) { %>
                            <li class="ico-like">
                                <i class="icon-comment-empty"></i>
                                <%= post.comments.length %>
                            </li>
                            <% } else { %>
                            <li class="ico-like">
                                <i class="icon-comment"></i>
                                <%= post.comments.length %>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </li>
        <% }) %> 
        </ul>
    </div>
<%- include paging %>
<%- include footer %>